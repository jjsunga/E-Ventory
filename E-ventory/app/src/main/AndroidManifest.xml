<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mike.e_ventory">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/inventory"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activities.Main"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.Statistics"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".Activities.AddProduct"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".Activities.Notifications"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".Activities.Search"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".Activities.ConfirmPopUpShopPurchase"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity android:name=".Activities.Preferences"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
    </application>

</manifest>